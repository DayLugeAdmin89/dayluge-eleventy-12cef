---
layout: layouts/base.njk
title: Archive
---

<div class="site-wrap">
  <h1 class="site-title">THE DAYLUGE — Archive</h1>
  <hr class="rule" />

  {% set items = collections.link | reverse %}

  <ul style="list-style:none; padding-left:0;">
    {% for item in items %}
      {% if loop.index0 >= 72 %}
        <li style="margin:6px 0;">
          <a class="link {{ item.data.color | safe }}" href="{{ item.data.url }}" target="_blank" rel="noopener">
            {{ item.data.title }}
          </a>
          <span style="color:#666; font-size:12px;"> — {{ item.date | date('yyyy-LL-dd HH:mm') }}</span>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>
